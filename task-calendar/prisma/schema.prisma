// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Child {
  id                  String               @id @default(cuid())
  name                String
  timeBalance         Int                  @default(0) // Time in minutes (15-minute increments)
  color               String?              // Hex color code for calendar display (e.g., "#3B82F6")
  inputBoolean        String?              // Home Assistant input_boolean entity_id (e.g., "input_boolean.tasks_complete_hayden")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  tasks               Task[]
  recurrenceTemplates RecurrenceTemplate[]
  techTimeAwards      TechTimeAward[]
}

model RecurrenceTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  frequency   String   // "one-time", "weekly", "monthly"
  daysOfWeek  String?  // JSON array of day numbers [0,1,2,3,4,5,6] for weekly (0 = Sunday)
  dayOfMonth  Int?     // 1-31 for monthly (repeats on same day each month)
  dueDate     DateTime? // Optional due date (only used for one-time tasks)
  childId     String?
  child       Child?   @relation(fields: [childId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
}

model Task {
  id                    String             @id @default(cuid())
  title                 String
  description           String?
  dueDate               DateTime
  completed             Boolean            @default(false)
  completedAt           DateTime?
  category              String             @default("helping-family") // "helping-family" or "enrichment"
  childId               String
  child                 Child              @relation(fields: [childId], references: [id], onDelete: Cascade)
  recurrenceTemplateId  String?
  recurrenceTemplate    RecurrenceTemplate? @relation(fields: [recurrenceTemplateId], references: [id], onDelete: SetNull)
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  @@index([dueDate])
  @@index([childId])
  @@index([completed])
  @@index([category])
}

model TechTimeAward {
  id        String   @id @default(cuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  awardDate DateTime // Date the award was given (for tracking daily awards)
  minutes   Int      @default(60) // Amount awarded (default 1 hour)
  createdAt DateTime @default(now())

  @@unique([childId, awardDate]) // Prevent duplicate awards for same child on same date
  @@index([childId])
  @@index([awardDate])
}

